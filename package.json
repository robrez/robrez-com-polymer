{
  "devDependencies": {
    "eslint": "^7.22.0",
    "@open-wc/eslint-config": "^4.2.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "prettier": "^2.2.1",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "puppeteer": "^8.0.0",
    "@web/test-runner": "^0.12.17",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/building-rollup": "^1.9.4",
    "deepmerge": "^4.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.4",
    "@web/dev-server": "^0.1.10",
    "concurrently": "^5.3.0",
    "typescript": "^4.2.3",
    "tslib": "^2.1.0"
  },
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "compile": "tsc",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js",
    "pdf": "node scripts/generate-pdf.js",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start:dist": "web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "start": "web-dev-server"
  },
  "name": "robrez-com",
  "version": "0.0.0",
  "description": "Webcomponent robrez-com following open-wc recommendations",
  "author": "robrez-com",
  "license": "MIT",
  "dependencies": {
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "pwa-helpers": "^0.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
